<div class="card rounded d-flex flex-md-row flex-sm-column w-100 justify-content-center me-1">
    <div class="p-1 col-lg-2 col-md-2">
        <input class="form-control" type="search" placeholder="Room name">
    </div>
    <div class="p-1 col-lg-2 col-md-2">
        <select class="form-control form-select" name="category" id="" >
            {{#if category}}
            <option value="{{category}}" class="select-label" selected>{{category}}</option>
            {{else}}
            <option value="" class="select-label">Category</option>
            {{/if}}
            <hr>
            {{#each categories}}
            <option value="{{this.Name}}" class="select-label">{{this.Name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="p-1 col-lg-2 col-md-2">
        <select name="status" class="form-select" id="status">
            {{#if status}}
            <option value="{{status}}" class="select-label" selected>{{status}}</option>
            {{else}}
            <option value="">Status</option>
            {{/if}}
            <hr>
            <option value="available">Available</option>
            <option value="unavailable">Unavailable</option>
        </select>
    </div>
    <div class="input-group p-1">
        <input type="number" class="input-sm form-control" name="price_min" placeholder="Price min" />
        <span class="input-group-text">to</span>
        <input type="number" class="input-sm form-control" name="price_max" placeholder="Price max" />
    </div>
    <div class="p-1">
        <input class="btn btn-outline-primary" type="submit" value="Search">
    </div>
</div>